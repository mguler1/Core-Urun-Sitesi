@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<CoreAndFood.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>FOOD NAME</th>
        <th>PRICE</th>
        <th>STOCK</th>
        <th>CATEGORY</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th>DETAILS</th>
    </tr>
    @foreach (var x in Model)


    {
    <tr>
        <td>@x.FoodID</td>
        <td>@x.Name</td>
        <td>@x.Price</td>
        <td>@x.Stock</td>
        <td>@x.Category.CatgoryName</td>
        <td><a href="/Food/FoodDelete/@x.FoodID" class="btn btn-danger">DELETE</a>
        <td><a href="/Food/FoodGet/@x.FoodID" class="btn btn-success"> UPDATE</a>
        <td><a href="#" class="btn btn-warning"> DETAILS</a>
    </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page}))
<a href=" /Food/FoodAdd" class="btn btn-primary">New Food</a>